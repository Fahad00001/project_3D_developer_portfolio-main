pipeline {
    agent any

    stages {
        stage('Install') {
            steps {
                bat 'npm install --legacy-peer-deps && next build'
            }
        }
        stage('Build') {
            steps {
                bat 'npm run vercel-build'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy step goes here'
            }
        }
    }
}
